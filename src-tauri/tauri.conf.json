{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "video-edit-program",
  "version": "0.1.0",
  "identifier": "com.firatmio.video-edit-program",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Video Kesici",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false,
        "visible": true,
        "center": true,
        "backgroundColor": "#090909"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Fırat Mio",
    "copyright": "© 2025 Fırat Mio. Tüm hakları saklıdır.",
    "category": "Video",
    "shortDescription": "Basit ve hızlı video kesme aracı",
    "longDescription": "Video Kesici, videolarınızı kolayca kesip birleştirmenizi sağlayan profesyonel bir masaüstü uygulamasıdır.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ffmpeg"
    ],
    "windows": {
      "digestAlgorithm": "sha256",
      "wix": {
        "language": "tr-TR"
      },
      "nsis": {
        "languages": ["Turkish"],
        "displayLanguageSelector": false
      }
    }
  }
}
